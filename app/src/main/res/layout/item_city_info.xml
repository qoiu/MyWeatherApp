<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCityInfo"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginBottom="6dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itemCityInfoDate"
        style="@style/CityInfoStyle"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:paddingTop="25dp"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/itemCityInfoIco"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/icons_clear"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/itemCityInfoTemperature"
        style="@style/CityInfoStyle"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:paddingTop="25dp"
        android:gravity="start"/>

    <TextView
        android:id="@+id/itemCityName"
        style="@style/CityInfoStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingTop="25dp"
        android:layout_weight="3"
        android:gravity="start"
        android:text="" />

</LinearLayout>