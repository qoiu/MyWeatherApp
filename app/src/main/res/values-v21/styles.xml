<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="MyTextStyle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorTextBasic</item>
        <item name="android:typeface">monospace</item>
        <item name="android:shadowColor">@color/colorTextShadow</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="RegularText" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextBasic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="CityInfoStyle" parent="RegularText">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="TemperatureText" parent="@style/RegularText">
        <item name="android:textSize">26sp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="HintText" parent="@style/RegularText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="TemperatureTextSmall"  parent="@style/RegularText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">35dp</item>
    </style>

</resources>
